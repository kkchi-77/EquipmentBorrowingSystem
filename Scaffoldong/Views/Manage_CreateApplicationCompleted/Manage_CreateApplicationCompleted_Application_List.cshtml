@model IEnumerable<Scaffoldong.Models.Application_Details>
@using System.Text;

@{
    ViewData["Title"] = "管理人員新增設備借用";
    Layout = "~/Views/Shared/_Layout_Manager_CreateApplicationCompleted.cshtml";
    var application_equipment_count = 0;
    var application_Consumables_count = 0;
    foreach (var item in Model)
    {
        @if (item.Is_Consumable == "False")
        { application_equipment_count++; }

    }
    foreach (var item in Model)
    {
        @if (item.Is_Consumable == "True")
        {
            application_Consumables_count = application_Consumables_count + int.Parse(item.Consumable_Borrowing_Times);

        }
    }

}
