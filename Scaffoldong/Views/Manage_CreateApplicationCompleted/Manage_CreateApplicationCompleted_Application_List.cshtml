            background-color: #cccccc;
            transform: translateY(-2px);
        }

        .admin-button:active {
            background-color: #cccccc;
            transform: translateY(0);
        }

</style>
<div style='display: flex; justify-content: space-between; align-items: center;'>
    <span style="font-size: 35px; font-weight: bold;">設備借用申請清單</span>
    <button class="admin-button" onclick="window.location.href = '@Url.Action("Application_List", "BorrowEquipment1")'">回到使用者模式</button>
</div>
<div style="text-align: right; font-size: 20px;">
    <spqn>目前借用的設備:共 @application_equipment_count 項</spqn>
</div>


<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr class="table-header">
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 40%;">
                @Html.DisplayNameFor(model => model.EName)
            </th>
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 20%;">
                @Html.DisplayNameFor(model => model.Emodel)
            </th>
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 10%;">
                @Html.DisplayNameFor(model => model.EId)
            </th>
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 10%;">
                @Html.DisplayNameFor(model => model.ESource)
            </th>
            <th class="table-cell-centered" style=" width: 8%;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Is_Consumable == "False")
            {
                <tr class="table-header1">
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.EName)
                    </td>
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.Emodel)
                    </td>
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.EId)
                    </td>
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.ESource)
                    </td>
                    <td class="table-cell-centered">
                        <form action="@Url.Action("Manage_CreateApplicationCompleted_Delete_Application_Details", "Manage_CreateApplicationCompleted")" method="post">
                            <input type="hidden" name="fId" value="@item.fId" />
                            <button type="submit" name="addButton" value="add">刪除此設備</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div style="text-align: right; font-size: 20px;">
    <span>目前借用的消耗品:共 <span id="consumables-count">@application_Consumables_count</span> 項</span>
</div>
<table class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr class="table-header">
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 40%;">
                消耗品
            </th>
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 20%;">
                @Html.DisplayNameFor(model => model.Emodel)
            </th>
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 10%;">
                借用數量
            </th>
            <th class="table-cell-centered" style="font-weight: bold; font-size: 20px; width: 10%;">
                @Html.DisplayNameFor(model => model.ESource)
            </th>
            <th class="table-cell-centered" style=" width: 8%;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Is_Consumable == "True")
            {
                <tr class="table-header1">
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.EName)
                    </td>
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.Emodel)
                    </td>
                    <td class="table-cell-centered" style="font-size: 18px;">
                        <div class="number-input">
                            <button type="button" class="btn btn-increment" onclick="changeValue('increase', 'consumable_@item.EName@item.Emodel', '@item.EName', '@item.Emodel')">+</button>
                            @Html.TextBoxFor(modelItem => item.Consumable_Borrowing_Times, new { @class = "form-control number-input-field", type = "number", @readonly = "readonly", @id = "consumable_" + item.EName + item.Emodel })
                            <button type="button" class="btn btn-decrement" onclick="changeValue('decrease', 'consumable_@item.EName@item.Emodel', '@item.EName', '@item.Emodel')">-</button>
                        </div>
                    </td>
                    <td class="table-cell-centered" style="font-size: 18px;">
                        @Html.DisplayFor(modelItem => item.ESource)
                    </td>
                    <td class="table-cell-centered">
                        <form action="@Url.Action("Manage_CreateApplicationCompleted_Delete_Application_Details", "Manage_CreateApplicationCompleted")" method="post">
                            <input type="hidden" name="fId" value="@item.fId" />
                            <button type="submit" name="addButton" value="add">刪除此設備</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>
    var applicationConsumablesCount = @application_Consumables_count;

    function changeValue(action, id, EName, Emodel) {
        var input = document.getElementById(id);
        var value = parseInt(input.value);

        // 获取当前设备数量
        $.ajax({
            url: '@Url.Action("GetEquipmentQuantity", "BorrowEquipment1")',
            type: 'GET',
            data: {
                EName: EName,
                Emodel: Emodel
            },
            success: function (data) {
                var maxQuantity = data.quantity;

                if (action === 'increase') {
                    if (value < maxQuantity) {
                        value++;
                        applicationConsumablesCount++;
                    } else {
                        alert('數量不能超過庫存量');
                        return;
                    }
                } else if (action === 'decrease' && value > 1) {
                    value--;
                    applicationConsumablesCount--;
                }

                input.value = value;
                document.getElementById('consumables-count').textContent = applicationConsumablesCount;

                // 发送 AJAX 请求更新数据库
                $.ajax({
                    url: '@Url.Action("UpdateConsumableBorrowingTimes", "BorrowEquipment1")',
                    type: 'POST',
                    data: {
                        EName: EName,
                        Emodel: Emodel,
                        newBorrowingTimes: value
                    },
                    success: function (response) {
                        console.log('Database updated successfully');
                    },
                    error: function (xhr, status, error) {
                        console.error('Failed to update the database: ' + error);
                    }
                });
            },
            error: function (xhr, status, error) {
                console.error('Failed to get the equipment quantity: ' + error);
            }
        });
    }
</script>

<form action="@Url.Action("Manage_CreateApplicationCompleted_Application_List", "Manage_CreateApplicationCompleted")" method="post" onsubmit="return validateForm()">
    <div class="form-horizontal">
        <h4>填寫申請人員資料</h4>
        <hr />

        <div class="form-group">
            <b> <span class="control-label col-md-2" style="padding-top: 10px;">申請人姓名：</span></b>

            <input type="text" id="Name" name="Name" required="required" autocomplete="off" />

        </div>

        <div class="form-group" style="padding-top: 10px;">
            <b>
                <span class="control-label col-md-2">借用時間：</span>
            </b>

            <input type="datetime-local" id="Borrow_Time" name="Borrow_Time" required="required" autocomplete="off" />

        </div>

        <div class="form-group" style="padding-top: 10px;">
            <b>
                <span class="control-label col-md-2">歸還時間：</span>
            </b>

            <input type="datetime-local" id="Return_Time" name="Return_Time" required="required" autocomplete="off" />

        </div>
        <script>
            function validateForm() {
                var borrowTime = new Date(document.getElementById("Borrow_Time").value);
                var returnTime = new Date(document.getElementById("Return_Time").value);

                if (returnTime < borrowTime) {
                    alert("歸還時間不能低於借用時間");
                    return false; // 阻止表單提交
                }
                if (@application_equipment_count == 0) {
                    alert("請至少新增一筆借用設備");
                    return false; // 阻止表單提交
                }
                return true; // 允許表單提交
            }
        </script>
        <div class="form-group" style="padding-top: 10px;">
            <b>
                <span class="control-label col-md-2">申請人聯絡電話：</span>
            </b>
            <input type="text" id="Mobile" name="Mobile" required="required" autocomplete="off" />

        </div>

        <div class="form-group" style="padding-top: 10px;">
            <b>
                <span class="control-label col-md-2">申請人信箱：</span>
            </b>
            <input type="text" id="email" name="fEmail" required="required" autocomplete="off" />
        </div>

        <div class="form-group" style="padding-top: 10px;">
            <b>
                <span class="control-label col-md-2">用途說明：</span>
            </b>

            <input type="text" id="Illustrate" name="Illustrate" required="required" autocomplete="off" />

        </div>

        <div class="form-group" style="padding-top: 10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="提出申請" />
            </div>
        </div>
    </div>
</form>


