        }

            .number-input .btn:hover {
                background-color: #e0e0e0;
            }

            .number-input .btn:active {
                background-color: #d0d0d0;
            }

    .number-input-field {
        text-align: center;
        width: 60px;
        height: 40px;
        border: 1px solid #ccc;
        margin: 0 5px;
        font-size: 18px;
        border-radius: 5px;
    }

    .table-cell-centered {
        text-align: center;
        vertical-align: middle;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 5px 10px;
        cursor: pointer;
        font-size: 16px;
        border-radius: 5px;
    }

