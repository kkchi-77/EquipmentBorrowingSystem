@model Scaffoldong.Models.Application

@{
    ViewData["Title"] = "(管理者權限)接受申請";
    Layout = "~/Views/Shared/_Layout_Manager_CreateApplicationCompleted.cshtml";
}
<style>

</style>
<b><label style="margin-top: 20px; font-size : 35px;">確定接受此筆申請紀錄嗎?</label></b>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fOrderGuid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fOrderGuid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Borrow_Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrow_Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Return_Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Return_Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mobile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Illustrate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Illustrate)
        </dd>
        <b><label style="margin-top: 20px; font-size : 30px;">接受申請前請先輸入以下資訊</label></b>

        <form action="@Url.Action("ApplicationCompleted", "ApplicationCompleted")" method="post">
            <input type="hidden" name="fOrderGuid" value="@Html.DisplayFor(model => model.fOrderGuid)" />
            <table class="table">
                <tr>
                    <td>
                        <label for="name">申請人是否需抵押證件：</label>
                        <select name="Credentials_Mortgage">
                            <option name="Credentials_Mortgage" value="身分免押">身分免押</option>
                            <option name="Credentials_Mortgage" value="學生證">學生證</option>
                            <option name="Credentials_Mortgage" value="駕照">駕照</option>
                            <option name="Credentials_Mortgage" value="身分證">身分證</option>
                        </select>

                    </td>

                </tr>
                <te>
                    <td>
                        <label for="name">接受人姓名(代表為此設備借用的移交人)：</label>
                        <input type="text" id="Equipment_Handover_Person" name="Equipment_Handover_Person" required="required" style="margin: 10px;">
                    </td>
                </te>
            </table>
            <button type="submit" name="addButton" value="add" style="margin-left: 10px;">接受</button>
            <button onclick="event.preventDefault(); window.location.href='@Url.Action("Manage_CreateApplicationCompleted_Application_Status", "Manage_CreateApplicationCompleted")'" style="width: 125px; height: 30px; font-size: 16px; ">返回申請列表</button>

        </form>




    </dl>

</div>
