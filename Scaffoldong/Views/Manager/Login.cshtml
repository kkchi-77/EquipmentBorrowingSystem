@{
    ViewBag.Title = "管理者登入";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-card">
    <div class="login-logo" style="background:linear-gradient(135deg,#2c3035,#4a5056);">
        <i class="bi bi-shield-check"></i>
    </div>
    <h5 class="text-center fw-bold mb-1">管理者登入</h5>
    <p class="text-center text-muted small mb-4">數位內容設計研究中心 · 設備借用系統</p>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger py-2 small mb-3">
            <i class="bi bi-exclamation-circle me-1"></i>@ViewBag.Message
        </div>
    }

    <form action="@Url.Action("Login")" method="post" autocomplete="off">
        <div class="mb-3">
            <label for="fUserId" class="form-label fw-semibold small">管理者帳號</label>
            <div class="input-group">
                <span class="input-group-text" style="background:#f8f9fa;border-right:0;">
                    <i class="bi bi-person-badge text-muted"></i>
                </span>
                <input type="text" id="fUserId" name="fUserId" required
                       class="form-control border-start-0" placeholder="請輸入管理者帳號" />
            </div>
        </div>
        <div class="mb-4">
            <label for="fPwd" class="form-label fw-semibold small">密碼</label>
            <div class="input-group">
                <span class="input-group-text" style="background:#f8f9fa;border-right:0;">
                    <i class="bi bi-lock text-muted"></i>
                </span>
                <input type="password" id="fPwd" name="fPwd" required
                       class="form-control border-start-0" placeholder="請輸入密碼" />
            </div>
        </div>
        <button type="submit" class="btn w-100 text-white fw-semibold"
                style="background-color:#2c3035;border-color:#2c3035;padding:.6rem;">
            <i class="bi bi-box-arrow-in-right me-1"></i>登入
        </button>
    </form>

    <div class="text-center mt-3">
        <a href="@Url.Action("Browse_equipment", "BorrowEquipment1")" class="text-muted small">
            <i class="bi bi-arrow-left me-1"></i>返回使用者介面
        </a>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
